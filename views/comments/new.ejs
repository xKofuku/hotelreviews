<!-- New Syntax for include -->
<%- include('../partials/header') %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%= hotel.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/hotels/<%= hotel._id %>/comments" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" id="" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels/<%= hotel._id %>">Go Back!</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 