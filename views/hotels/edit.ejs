<!-- New Syntax for include -->
<%- include('../partials/header') %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= hotel.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/hotels/<%= hotel._id %>?_method=PUT" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[name]" id="" value="<%= hotel.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[image]" id="" value="<%= hotel.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[price]" id="" value="<%= hotel.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hotel[description]" id="" value="<%= hotel.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels">Go Back!</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 