<!-- New Syntax for include -->
<%- include('../partials/header') %> 

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new Hotel</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/hotels" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" id="" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" id="" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" id="" placeholder="Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" id="" placeholder="Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/hotels">Go Back!</a>
        </div>
    </div>
</div>
<%- include('../partials/footer') %> 